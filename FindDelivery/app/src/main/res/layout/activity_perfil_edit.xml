<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="finddelivery.es.projeto.finddelivery.PerfilEditActivity">



    <Button
        android:layout_width="200"
        android:layout_height="wrap_content"
        android:text="Salvar alterações"
        android:id="@+id/btnSalvarAlteracoes"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginBottom="110dp" />

    <Button
        android:layout_width="200"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnCancelar2"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSalvarAlteracoes"
        android:layout_alignStart="@+id/btnSalvarAlteracoes" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="13"
        android:id="@+id/editTextNomeUser"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />


</RelativeLayout>
