<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right|bottom">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="finddelivery.es.projeto.finddelivery.views.EstablishmentDetails">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_gravity="left|center_vertical">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Establishment name"
                    android:id="@+id/establishmentNameTextView"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Speciality type"
                    android:id="@+id/specialityTypeTextView"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/establishmentNameTextView" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/establishmentPhotoImageView"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Average"
                    android:id="@+id/averageOfEstablishmentTextView"
                    android:layout_gravity="right"
                    android:layout_alignBottom="@+id/evaluationEstablishmentRatingBar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evaluationEstablishmentRatingBar"
                    android:layout_below="@+id/establishmentPhotoImageView"
                    android:isIndicator="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|center"
                android:layout_marginTop="60dp">

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horários de funcionamento"
                android:id="@+id/textView7"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.24"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Horários"
                android:id="@+id/businessHours"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:width="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefones"
                android:id="@+id/phones"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.24"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|top">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="986313463"
                        android:id="@+id/fieldPhone"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:enabled="false"
                        android:width="200dp" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/phone"
                        android:layout_marginLeft="260dp"
                        android:layout_gravity="top"
                        android:src="@drawable/telefone"
                        android:layout_alignBottom="@+id/fieldPhone" />

               </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="986313463"
                    android:id="@+id/fieldPhoneTwo"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:enabled="false"
                    android:width="200dp" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/phoneTwo"
                    android:layout_marginLeft="260dp"
                    android:layout_gravity="left"
                    android:src="@drawable/telefone"
                    android:layout_alignBottom="@+id/fieldPhoneTwo" />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Avaliações"
                android:id="@+id/btnAvaliacoes"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:onClick="getAvaliacao"/>

        </LinearLayout>

    </FrameLayout>

</ScrollView>
