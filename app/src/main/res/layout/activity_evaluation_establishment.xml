<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="finddelivery.es.projeto.finddelivery.views.EvaluationEstablishmentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Establishment name"
                android:id="@+id/establishmentNameTextView"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Speciality type"
                android:id="@+id/specialityTypeTextView"
                android:layout_gravity="right"
                android:layout_below="@+id/establishmentNameTextView"
                android:layout_alignLeft="@+id/establishmentNameTextView"
                android:layout_alignStart="@+id/establishmentNameTextView" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/establishmentPhotoImageView"
                android:layout_gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Grade"
                android:id="@+id/gradeTextView"
                android:layout_gravity="right"
                android:layout_alignBottom="@+id/evaluationEstablishmentRatingBar"
                android:layout_toRightOf="@+id/specialityTypeTextView"
                android:layout_toEndOf="@+id/specialityTypeTextView" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evaluationEstablishmentRatingBar"
                android:layout_below="@+id/establishmentPhotoImageView"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="60dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/listView" />


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Avalie este restaurante"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="Arial"
            android:id="@+id/btnEvaluateEstablishment"
            android:layout_gravity="center_horizontal|bottom"/>



    </FrameLayout>

</FrameLayout>
